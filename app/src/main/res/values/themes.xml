<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lighterBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="titleTextColor">@color/paleBlue</item>
    </style>

    <style name="AppActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTitleText</item>
    </style>

    <style name="AppTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/paleBlue</item>
    </style>

</resources>



